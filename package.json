{
	"name": "@package-pal/root",
	"license": "MIT",
	"type": "module",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"lint": "eslint --fix && prettier --log-level warn --write \"**/*.{md,json,yml}\"",
		"check": "tsc --build && tsc --build --clean",
		"test": "bun test --only-failures",
		"build": "bun run scripts/build-package.ts",
		"build:compile-cli": "bun scripts/compile-cli-target-packages.ts",
		"build:all": "bun run build util && bun run build core && bun run build cli && bun run build:compile-cli"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"catalog": {
			"typescript": "^5.9.3",
			"@types/bun": "^1.3.3"
		}
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@package-pal/util": "link:@package-pal/util",
		"@package-pal/cli": "link:@package-pal/cli",
		"@stylistic/eslint-plugin": "^5.6.1",
		"@types/bun": "^1.3.3",
		"@typescript-eslint/parser": "^8.48.0",
		"eslint": "^9.39.1",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jsdoc": "^61.4.1",
		"eslint-plugin-unused-imports": "^4.3.0",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0"
	},
	"sideEffects": false
}
