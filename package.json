{
	"name": "@package-pal/root",
	"license": "MIT",
	"type": "module",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"lint": "eslint --fix && prettier --log-level warn --write \"**/*.{md,json,yml,toml}\"",
		"check": "tsc --build && tsc --build --clean",
		"build": "bun run scripts/build-package.ts",
		"build:compile-cli": "bun scripts/compile-cli-target-packages.ts",
		"build:all": "bun run build util && bun run build core && bun run build cli && bun run build:compile-cli"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@package-pal/cli": "link:@package-pal/cli",
		"@stylistic/eslint-plugin": "^5.4.0",
		"@types/bun": "^1.2.23",
		"@typescript-eslint/parser": "^8.44.1",
		"eslint": "^9.36.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jsdoc": "^60.5.0",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1"
	},
	"sideEffects": false
}
